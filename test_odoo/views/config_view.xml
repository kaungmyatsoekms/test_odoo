<odoo>
    <data>
        <record id = "hotel_config_view_form" model="ir.ui.view">
            <field name="name">Hotel Config</field>
            <field name="model">hotel.config</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </sheet>
                </form>
            </field>

        </record>

        <record id="hotel_config_action_window" model="ir.actions.act_window">
            <field name="name">Hotel Config</field>
            <field name="res_model">hotel.config</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="config_menu" name="Configuration"/>

        <menuitem id="hotel_config_menu" name="Hotel Configuration" parent="config_menu" action="hotel_config_action_window"/>

    </data>
</odoo>